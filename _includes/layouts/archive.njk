---
layout: base.njk
---

{# Archive List Template with Pagination #}

<div class="archive-header">
  <h1>{% if year %}{{ year }} Archives{% else %}All Archives{% endif %}</h1>
  {% if pagination.pages.length > 1 %}
  <p class="page-info">Page {{ pagination.pageNumber + 1 }} of {{ pagination.pages.length }}</p>
  {% endif %}
</div>

{# Entry List #}
<div class="archive-list">
  {% for entry in pagination.items %}
  <div class="block1">
    <h2><a href="{{ entry.url }}">{{ entry.title }}</a></h2>
    {% if entry.date %}
    <p class="entry-date">{{ entry.date | dateFormat }}</p>
    {% endif %}
    {% if entry.categories and entry.categories.length > 0 %}
    <p class="entry-categories">
      {% for cat in entry.categories %}
      <span class="category">{{ cat }}</span>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
    {% endif %}
    {% if entry.summary %}
    <p class="entry-summary">{{ entry.summary }}</p>
    {% endif %}
  </div>
  <div class="line1"></div>
  {% endfor %}
</div>

{# Pagination Navigation #}
{% if pagination.pages.length > 1 %}
<nav class="pagination" aria-label="Archive navigation">
  <ul class="pagination-list">
    {# Previous Link #}
    {% if pagination.href.previous %}
    <li class="pagination-item pagination-prev">
      <a href="{{ pagination.href.previous }}" rel="prev">&laquo; Prev</a>
    </li>
    {% else %}
    <li class="pagination-item pagination-prev disabled">
      <span>&laquo; Prev</span>
    </li>
    {% endif %}

    {# Page Numbers #}
    {% for pageEntry in pagination.pages %}
    {% set pageNumber = loop.index %}
    <li class="pagination-item{% if loop.index0 == pagination.pageNumber %} active{% endif %}">
      {% if loop.index0 == pagination.pageNumber %}
      <span class="current">{{ pageNumber }}</span>
      {% else %}
      <a href="{{ pagination.hrefs[loop.index0] }}">{{ pageNumber }}</a>
      {% endif %}
    </li>
    {% endfor %}

    {# Next Link #}
    {% if pagination.href.next %}
    <li class="pagination-item pagination-next">
      <a href="{{ pagination.href.next }}" rel="next">Next &raquo;</a>
    </li>
    {% else %}
    <li class="pagination-item pagination-next disabled">
      <span>Next &raquo;</span>
    </li>
    {% endif %}
  </ul>
</nav>
{% endif %}
