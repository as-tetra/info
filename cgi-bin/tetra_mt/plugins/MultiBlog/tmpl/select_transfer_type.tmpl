<TMPL_LOOP NAME=CATEGORIES>
<option value="<TMPL_VAR NAME=CATEGORY_ID>"><TMPL_VAR NAME=CATEGORY_LABEL_SPACER><TMPL_VAR NAME=CATEGORY_LABEL></option>
</TMPL_LOOP>
</select></p>
</div>

<div id="blog_select" style="display:none">
<p><label for="dest_blog_id">To: </label>
<select name="dest_blog_id">
<TMPL_LOOP NAME=DEST_BLOGS>
<option value="<TMPL_VAR NAME=BLOG_ID>"><TMPL_VAR NAME=BLOG_NAME></option>
</TMPL_LOOP>
</select></p>
<p><input type="submit" value="Transfer"/></p>
</div>

